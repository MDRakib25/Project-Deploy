<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login and Register</title>
  <link rel="stylesheet" href="../css/styles.css">
  <style>
    body {
  font-family: 'Arial', sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.center-container {
  text-align: center;
}

form {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
  color: #333;
}

input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  background-color: #4caf50;
  color: #fff;
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

.error {
  color: #ff0000;
}

.register-form {
  display: none;
}


/* Add some spacing between the forms */
form {
  margin-bottom: 20px;
}

/* Style the headings */
h1 {
  font-size: 24px;
  margin-bottom: 20px;
}

/* Style the form container */
.center-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Add a subtle border to the forms */
form {
  border: 1px solid #ccc;
}

/* Style the input placeholders for better visibility */
input::placeholder {
  color: #888;
}

/* Style the submit buttons on hover */
button:hover {
  background-color: #45a049;
  transform: scale(1.05);
}

/* Add some styling to the error messages */
.error {
  margin-top: 10px;
  font-size: 14px;
}

/* Style the New Register button on hover */
#newRegisterButton:hover {
  background-color: #2980b9;
  transform: scale(1.05);
}

/* Responsive design for smaller screens */
@media only screen and (max-width: 600px) {
  form {
    width: 90%;
    max-width: none;
  }
}
    .register-form label,
    .register-form input,
    .register-form button {
      display: block;
      margin-bottom: 10px; /* Adjust the margin as needed for spacing */
    }
  </style>
</head>
<body class="center-container">
  <h1>Login</h1>
  <% if (messages.error) { %>
    <p class="error"><%= messages.error[0] %></p>
  <% } %>
  
  <form method="POST" action="/login">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>
    <button type="submit">Login</button>
  </form>

  <!-- Registration Form -->
  <h1>Register</h1>
  <% if (messages.registrationError) { %>
    <p class="error"><%= messages.registrationError[0] %></p>
  <% } %>

  <form method="POST" action="/login/register" class="register-form">
    <label for="newUsername">New Username:</label>
    <input type="text" name="newUsername" placeholder="New Username" required>

    <label for="newPassword">New Password:</label>
    <input type="password" name="newPassword" placeholder="New Password" required>

    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" placeholder="First Name" required>

    <label for="lastName">Last Name:</label>
    <input type="text" name="lastName" placeholder="Last Name" required>

    <label for="Email">Email:</label>
    <input type="email" name="email" placeholder="Email" required>
    <button type="submit">Register</button>
  </form>

    <!-- Add a Register button to toggle the forms -->
  <button id="newRegisterButton" onclick="toggleForms()">New Register</button>

<script>
  // JavaScript to toggle between login and registration forms
  const loginForm = document.querySelector('form:not(.register-form)');
  const registerForm = document.querySelector('.register-form');
  const newRegisterButton = document.getElementById('newRegisterButton');

  document.addEventListener('DOMContentLoaded', () => {
    registerForm.style.display = 'none';
  });

  function toggleForms() {
    loginForm.style.display = loginForm.style.display === 'none' ? 'block' : 'none';
    registerForm.style.display = registerForm.style.display === 'none' ? 'block' : 'none';
    newRegisterButton.style.display = 'none'; // Hide the New Register button
  }
</script>
</body>
</html>
