<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title" value="<%= books.Title %>" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" value="<%= books.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre" value="<%= books.Genre %>"  required>
              </div>
              <div class="form-group">
                <label for="AvailableTextField">Available</label>
                <input type="text" class="form-control" id="AvailableTextField"
                placeholder="Book Availability" name="available" value="<%= books.Available %>"  required>
              </div>
              <div class="form-group">
                <label for="ReturnDateTextField">Return Date</label>
                <input type="text" class="form-control" id="ReturnDateTextField"
                placeholder="DD-MM-YYYY" name="returnDate" value="<%= books.Return_date %>"  required>
              </div>
              <div class="form-group">
                <label for="OverdueFeesTextField">Overdue Fees</label>
                <input type="text" class="form-control" id="OverdueFeesTextField"
                placeholder="Book Overdue Fees" name="overdueFees" value="<%= books.Overdue_fees %>"  required>
              </div>
              <div class="form-group">
                <label for="CurrentlyWithTextField">Currently With</label>
                <input type="text" class="form-control" id="CurrentlyWithTextField"
                placeholder="Book Currently With" name="currentlyWith" value="<%= books.Currently_with %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
